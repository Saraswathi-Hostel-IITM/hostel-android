<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a caption for your new complaint"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:inputType="text"
        android:lines="3"
        android:layout_height="wrap_content" >

        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a description for your new complaint"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/userInput2"
        android:layout_width="match_parent"
        android:inputType="text"
        android:lines="3"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter secretaries to tag"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Secretary"
        android:id="@+id/genseccheck"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Social Affairs Secretary"
        android:id="@+id/socseccheck"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sports Secretary"
        android:id="@+id/sportsseccheck"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health and Hygiene Secretary"
        android:id="@+id/healthseccheck"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technical Affairs Secretary"
        android:id="@+id/taseccheck"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Literary Affairs Secretary"
        android:id="@+id/litseccheck"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hostel Legislator"
        android:id="@+id/hoslegcheck"/>

</LinearLayout>